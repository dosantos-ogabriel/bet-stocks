generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name   String
  amount String
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  name   String
  amount Float

  Deposit  Deposit[]
  Withdraw Withdraw[]
}

model Deposit {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Withdraw {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  userId Int
}

model Bet {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())

  amount      Float
  finalAmount Float
  finishedAt  DateTime?
}
